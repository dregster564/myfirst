# ScrollClass.py + PASSWORDING.KV + scrollscreen.kv
#:import fix fixtures
# Поля общих настроек виджетов
<ItemLabel@Label>:
    id:self.superScrollLabel
    padding: 10
    spacing:5
    size_hint_y:None
    height:self.texture_size[1]
    text_size:self.width,None
    markup:True

<ItemBoxlayout@BoxLayout>:
    orientation:'vertical'
    spacing:10
    padding:10
    canvas.before:
        Color:
            rgba:fix.colorCentrlayout
        RoundedRectangle:
            on_radius:[30]
            pos:self.pos
            size:self.size

<ItemButton@Button>:
    text:'Вернуть'
    font_size:'16dp'
    size_hint:(1,0.1)
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    halign:'center'
    text_size: self.width, None
    background_normal:''
    canvas.before:
        Color:
            rgba: fix.colorReturnHandBook if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]

#Балловая оценка
<Ball>:
    ItemBoxlayout:
        ScrollView:
            scroll_type:['bars','content']
            bar_width:7
            ItemLabel:
                text: fix.ballText
        ItemButton:
            on_press:root.on_press_button_back(self)
