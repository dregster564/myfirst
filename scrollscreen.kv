# определение бокса. НЕ наследуется, определен в данном месте
<ScrollBoxlayout@BoxLayout>:
    orientation:'vertical'
    spacing:10
    padding:10
    height: self.minimum_height # Скролл не откидывает назад, кнопки нормального размера
    size_hint: (1, None)# None дает возможность скроллить кнопки

# определение кнопки,НЕ наследуется, определен в данном месте
<ScrollButton@Button>:
    #Овальная кнопка с границей
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    font_size:'15dp'
    halign:'center'
    text_size: self.width, None
    background_normal:''
    size_hint: 1, None
    size: .1, 100 # Расчитывает только высоту кнопки 50 пикс

    canvas.before:
        Color:
            rgba: fix.colorMainButton if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]
        Color:
            rgba: fix.colorBorder
        Line:
            width: 2
            rounded_rectangle: self.x, self.y, self.width, self.height,20
            joint:'round'
